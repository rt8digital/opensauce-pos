{
    "appId": "com.pos.system",
    "productName": "OpenSauce P.O.S.",
    "directories": {
        "output": "dist-electron"
    },
    "files": [
        "dist/**/*",
        "electron.js",
        "preload.js",
        "node_modules/**/*"
    ],
    "mac": {
        "category": "public.app-category.business",
        "target": [
            {
                "target": "dmg",
                "arch": [
                    "x64",
                    "arm64"
                ]
            }
        ]
    },
    "win": {
        "target": [
            {
                "target": "nsis",
                "arch": [
                    "x64",
                    "ia32"
                ]
            }
        ]
    },
    "linux": {
        "target": [
            {
                "target": "AppImage",
                "arch": [
                    "x64"
                ]
            },
            {
                "target": "deb",
                "arch": [
                    "x64"
                ]
            }
        ]
    },
    "nsis": {
        "oneClick": false,
        "perMachine": false,
        "allowToChangeInstallationDirectory": true,
        "deleteAppDataOnUninstall": false
    }
}